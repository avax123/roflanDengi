{% extends "layouts/base.html.twig" %}
    {% block title %}Login form{% endblock %}
    {% block content %}
        <h1>Sign in</h1>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.getMessageKey }}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    {% endblock %}